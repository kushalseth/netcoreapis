@model Hmsapp.Models.DoctorPatients

<div id="js-patients-list-parent">
    <div>
        <a href="#" class="btn btn-info btn-lg" id="js-addmorepatients" style="float: right; margin-right: 48px;">
            <span class="glyphicon glyphicon-plus"></span> Add more Patients
        </a>
    </div>
    <div  style="padding: 48px;">
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>View Details</th>
            </tr>
            @foreach (var currentPatient in Model.PatientsList)
            {
                <tr>
                    <td>@currentPatient.FirstName</td>
                    <td>@currentPatient.LastName</td>
                    <td id="js-edit-patient"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
                    <td id="js-delete-patient"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></td>
                    <td id="js-view-patient"><span class="glyphicon glyphicon glyphicon-list-alt" aria-hidden="true"></span></td>
                </tr>
            }
        </table>
    </div>

</div>

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div class="modal fade" id="js-modal-addPatients" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add more Patients</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="js-pat-first-name"><span class="glyphicon glyphicon-user"></span>First Name</label>
                        <input type="text" class="form-control" id="js-pat-first-name" placeholder="Enter First Name">
                    </div>
                    <div class="form-group">
                        <label for="js-pat-last-name"><span class="glyphicon glyphicon-eye-open"></span>Last Name</label>
                        <input type="text" class="form-control" id="js-pat-last-name" placeholder="Enter Last Name">
                    </div>
                    @*<div class="form-group">
                        <label for="last_name"><span class="glyphicon glyphicon-eye-open"></span>Last Name</label>
                        <input type="text" class="form-control" id="last_name" placeholder="Enter Last Name">
                    </div>*@
                    @*<label class="radio-inline" style="padding-right: 10px">
                        <input type="radio" name="optradio">Online Booking - Paid
                    </label>
                    <label class="radio-inline" style="padding-right: 10px">
                        <input type="radio" name="optradio">Online Booking - Not Paid 
                    </label>
                    <label class="radio-inline" style="padding-right: 10px">
                        <input type="radio" name="optradio">Paid patient
                    </label>
                    <label class="radio-inline" style="padding-right: 10px">
                        <input type="radio" name="optradio">Regular patient
                    </label>*@
                    <a href="#" id="js-save-new-patient" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span>Save Patient</a>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>